<%- include ('partials/navbar.ejs') %>
<%- include ('partials/header.ejs') %>


<!------ Include the above in your HEAD tag ---------->

<div class="container">
    
 <div class="card">
   
    <div class="card-body">
        <section class="get-in-touch">
            <h1 class="title">Alterar Produto</h1>
            <form class="contact-form row" action="/estoque/update/<%= estoque._id  %>" method="post">
               <div class="form-field col-lg-6">
                  <input id="produto" name="produto" class="input-text js-input" type="text" value="<%= estoque.produto %>" required>
                  <label class="label" for="name">Produto</label>
               </div>
               <div class="form-field col-lg-6 ">
                  <input id="quantidade" name="quantidade" class="input-text js-input" type="text" value="<%= estoque.quantidade %> "required>
                  <label class="label" for="email">Quantidade</label>
               </div>
               <div class="form-field col-lg-6 ">
                  <input id="peso" name="peso" class="input-text js-input" type="text" value="<%= estoque.peso %> "required>
                  <label class="label" for="company">Peso</label>
               </div>
                <div class="form-field col-lg-6 ">
                  <input id="validade" name="validade" class="input-text js-input" type="text" value="<%= estoque.validade %> "required>
                  <label class="label" for="phone">Data de Validade</label>
               </div>
           
               <div class="form-field col-lg-12">
                  <input class="submit-btn" type="submit" value="Editar" onclick="return confirm('Confirma as alterações?')">
                  
               </div>
               <input type="hidden" name="id" value="<%= estoque.id %>" >
            </form>
         </section>
    </div>
 </div>
</div>




