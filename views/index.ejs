    </div>  
    

    <script>
        var xValues = ["Segunda", "Terca", "Quarta", "Quinta", "Sexta"];
        var yValues = [20, 10,10,15,30];
        var barColors = ["red", "#00aba9","#6959CD","#4169E1","#BA55D3"];
        
        var ctx1 = document.getElementById('myChart').getContext('2d');
        new Chart(ctx1, {
            type: "pie",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Gráfico de Desperdicio'
                    }
                }
            }
        });
    </script>
    
    <script>
        var ctx2 = document.getElementById('myChart2').getContext('2d');
        new Chart(ctx2, {
            type: "pie",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Gráfico de Consumo'
                    }
                }
            }
        });
    </script>
    
                
