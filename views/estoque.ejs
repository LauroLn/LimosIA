<%- include ('partials/navbar.ejs') %>
<%- include ('partials/header.ejs') %>

<body class="hm-gradient">
    
    <main>
        
        <!--MDB Tables-->
        <div class="container mt-4">

         

            <div class="card mb-4">
                <div class="card-body">
                    <!-- Grid row -->
                    <div class="row">
                        <!-- Grid column -->
                        <div class="col-md-12">
                            <a class="btn btn-danger" style="margin-left: 81%;position: absolute; margin-top: 2%;" href="/estoque/cadastrar">Cadastrar</a>
                          
                            <h2 class="pt-3 pb-4 text-center font-bold font-up deep-purple-text">Estoque</h2>
                            <div class="input-group md-form form-sm form-2 pl-0">
                                <input class="form-control my-0 py-1 pl-3 dark-border" type="text" placeholder="Pesquise no estoque..." aria-label="Search">
                                <span class="input-group-addon waves-effect dark lighten-2" id="basic-addon1"><a><i class="fa fa-search dark" aria-hidden="true"></i></a></span>
                            </div>
                        </div>
                        <!-- Grid column -->
                    </div>
                    <!-- Grid row -->
                    <!--Table-->
                    <table class="table table-striped">
                        <!--Table head-->
                        <thead>
                            <tr>
                                <th>Produto</th>
                                <th>Quantidade</th>
                                <th>Peso</th>
                                <th>Validade</th>
                                <th>Editar</th>
                                <th>Excluir</th>
                            </tr>
                        </thead>
                        <!--Table head-->
                        <!--Table body-->
                        <tbody>
                            <% estoque.forEach(produto=>{  %>
                            <tr>
                                <td><%= produto.produto%></td>
                                <td><%= produto.quantidade%></td>
                                <td><%= produto.peso%>KG</td>
                                <td><%=produto.validade%></td>
                                <td>  <a class="btn btn-danger"  href="/estoque/editar/<%= produto._id %>">Editar</a></td>
                                <td>  <a class="btn btn-danger" onclick="return confirm('Confirma as alterações?')" href="/estoque/excluir/<%= produto._id %>">Excluir</a></td>
                            </tr>
                            <% }) %> 
                        </tbody>
                      
                        <!--Table body-->
                    </table>
                    <!--Table-->
                </div>
            

        </div>
        <!--MDB Tables-->
      
    </main>
  


</body>






<%- include ('partials/footer.ejs') %>